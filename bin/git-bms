#!/usr/bin/env bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
source "${SCRIPT_DIR}/gitbmscommon"

exec() {
    common_exec $@
    cmd=$1
    shift

    case $cmd in
        init)
            git-bms-init $@
            ;;
        feature)
            git-bms-feature $@
            ;;
        fix)
            git-bms-fix $@
            ;;
        *)
            bms_banner
            echo "Command '$1' is unknown."
            echo ""
            help
            ;;
    esac

}

exec $@